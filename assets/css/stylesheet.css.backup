            }
            50% {
                opacity: 1;
            }
        }
        
        /* Enhanced form focus states */
        .form-control:focus {
            border-color: var(--primary);
            outline: none;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
